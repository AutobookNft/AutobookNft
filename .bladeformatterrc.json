{
    "indentSize": 4,
    "wrapAttributes": "auto",
    "wrapLineLength": 120,
    "endWithNewLine": true,
    "noMultipleEmptyLines": false,
    "useTabs": false,
    "sortTailwindcssClasses": true,
    "sortHtmlAttributes": "none",
    "noPhpSyntaxCheck": false,
    "bladeFormatter.commentColor": "#008000",
    "bladeFormatter.tagColor": "#00BFFF",
    "format_comment": {
        "enabled": true,
        "space_after": true,
        "block_style": "empty"
  }
}
